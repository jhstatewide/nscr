<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Console appender for test output -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>
    
    <!-- Root logger configuration for tests -->
    <root level="INFO">
        <appender-ref ref="CONSOLE" />
    </root>
    
    <!-- Make torture test progress more visible -->
    <logger name="com.statewidesoftware.nscr.RegistryTortureTest" level="INFO" />
    
    <!-- Reduce noise from other components during tests -->
    <logger name="io.javalin" level="WARN" />
    <logger name="org.eclipse.jetty" level="WARN" />
    <logger name="blobstore.H2BlobStore" level="WARN" />
</configuration>
